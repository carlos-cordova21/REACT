 /* Estilos generales */
 body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    
    /* Estilos del navbar */
    .navbar {
        background-color: #333; /* Color de fondo */
        overflow: hidden; /* Para que los elementos floten correctamente */
    }
    
    .navbar a {
        float: left; /* Hacer que los elementos se alineen horizontalmente */
        display: block; /* Para que los elementos se comporten como bloques */
        color: white; /* Color del texto */
        text-align: center; /* Alinear el texto al centro */
        padding: 14px 20px; /* Espaciado interno */
        text-decoration: none; /* Quitar subrayado */
    }
    
    .navbar a:hover {
        background-color: #ddd; /* Cambiar color de fondo al pasar el mouse */
        color: black; /* Cambiar color del texto al pasar el mouse */
    }
    
    .navbar a.active {
        background-color: #04AA6D; /* Color de fondo del elemento activo */
        color: white; /* Color del texto del elemento activo */
    }
    
    /* Estilos para hacer el navbar responsive */
    .navbar a:not(:first-child) {
        display: none; /* Ocultar elementos que no sean el primer hijo (el primer enlace) */
    }
    
    .navbar a.icon {
        float: right; /* Hacer flotar el ícono a la derecha */
        display: block; /* Hacer que el ícono sea un bloque */
    }
    
    @media screen and (max-width: 600px) {
        .navbar a:not(:first-child) {
            display: none; /* Ocultar elementos que no sean el primer hijo en pantallas pequeñas */
        }
        .navbar a.icon {
            float: right; /* Hacer flotar el ícono a la derecha */
            display: block; /* Hacer que el ícono sea un bloque */
        }
        .navbar.responsive a {
            float: none; /* Revertir la flotación */
            display: block; /* Mostrar los elementos como bloques */
            text-align: left; /* Alinear el texto a la izquierda */
        }
    }
    </style>
</head>
<body>
    
